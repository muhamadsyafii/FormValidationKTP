    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Alamat"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="50">
            <EditText
                android:id="@+id/et_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Masukan alamat"
                android:inputType="textLongMessage"
                android:textColor="@color/Black" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="RT/RW"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center">
                    <EditText
                        android:id="@+id/et_rt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukan RT"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/Black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_rw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Masukan RW"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/Black" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Kelurahan/Desa"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_kelurahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Masukan kelurahan/desa"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:textColor="@color/Black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Kecamatan"
                android:textColor="@color/Black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_kecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Masukan kecamatan"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:textColor="@color/Black" />
                <Button
                    android:id="@+id/btn_nextSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/rounded_blue"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>





</RelativeLayout>